{
  "printWidth": 80,
  "tabWidth": 2,
  "useTabs": false,
  "singleQuote": true,
  "bracketSpacing": true,
  "arrowParens": "always",
  "semi": false,
  "overrides": [
    {
      "files": "*.sol",
      "options": {
        "tabWidth": 4,
        "singleQuote": false,
        "explicitTypes": "always",
        "semi": true
      }
    },
    {
      "files": "*.ts",
      "options": {
        "printWidth": 80
      }
    }
  ]
}
