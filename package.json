{
  "name": "teller-protocol-v1",
  "version": "1.0.0",
  "license": "MIT",
  "main": "truffle-config.js",
  "scripts": {
    "lint-sol": "yarn solhint -f table \"./contracts/**/*.sol\"",
    "lint-ts": "yarn eslint . -f table -ext ts,js --fix",
    "lint-json": "prettier",
    "fork:mainnet": "node scripts/utils/forkMainnet.js",
    "node:localhost": "yarn hardhat node",
    "deploy:rinkeby": "yarn hardhat deploy --network rinkeby",
    "deploy:ropsten": "yarn hardhat deploy --network ropsten",
    "deploy:kovan": "yarn hardhat deploy --network kovan",
    "deploy:mainnet": "yarn hardhat deploy  --network mainnet",
    "test": "yarn hardhat test",
    "coverage": "yarn hardhat coverage --solcoverjs ./solcover.js",
    "test:localhost": "yarn hardhat test --network localhost",
    "console:rinkeby": "yarn hardhat console --network rinkeby",
    "console:ropsten": "yarn hardhat console --network ropsten",
    "console:kovan": "yarn hardhat console --network kovan",
    "console:localhost": "yarn hardhat console --network localhost",
    "console:mainnet": "yarn hardhat console --network mainnet",
    "compile": "yarn hardhat compile && yarn types",
    "types": "yarn typechain --target ethers-v5 --outDir types/typechain 'artifacts/!(build-info)/**/+([a-zA-Z0-9]).json'",
    "format:prettier": "prettier --write contracts/**/**/**/**/**/**.sol",
    "format:prettier:print": "prettier contracts/**/**/**/**/**/**.sol"
  },
  "devDependencies": {
    "@gnosis.pm/mock-contract": "^3.0.7",
    "@nomiclabs/hardhat-ethers": "^2.0.1",
    "@nomiclabs/hardhat-etherscan": "^2.1.0",
    "@nomiclabs/hardhat-waffle": "^2.0.1",
    "@typechain/ethers-v5": "^5.0.0",
    "@typechain/truffle-v5": "^3.0.0",
    "@types/chai": "^4.2.14",
    "@types/chai-as-promised": "^7.1.3",
    "@types/expect": "^24.3.0",
    "@types/mocha": "^8.2.0",
    "@types/node": "^14.14.22",
    "axios": "^0.21.1",
    "bl": "^2.2.1",
    "chai": "^4.2.0",
    "dotenv": "^8.2.0",
    "eslint": "^5.16.0",
    "ethereum-waffle": "^3.2.1",
    "ethereumjs-abi": "^0.6.8",
    "ethereumjs-util": "^6.1.0",
    "ganache-cli": "^6.4.4",
    "ganache-time-traveler": "^1.0.5",
    "hardhat": "^2.0.8",
    "hardhat-contract-sizer": "^2.0.2",
    "hardhat-deploy": "^0.7.0-beta.44",
    "hardhat-typechain": "^0.3.4",
    "husky": "^4.2.3",
    "jsonfile": "^6.0.1",
    "leche": "^2.3.0",
    "lint-staged": "^10.5.3",
    "lodash": "^4.17.19",
    "mocha": "^7.1.0",
    "node-fetch": "^2.6.1",
    "prettier": "^2.0.2",
    "prettier-plugin-solidity": "^1.0.0-alpha.46",
    "serialize-javascript": "^3.1.0",
    "solhint": "^2.1.0",
    "solhint-plugin-prettier": "^0.0.4",
    "solidity-coverage": "^0.7.14",
    "truffle": "5.1.41",
    "truffle-assertions": "^0.9.2",
    "truffle-plugin-verify": "^0.3.10",
    "ts-node": "^9.1.1",
    "typechain": "^4.0.1",
    "typescript": "^4.1.3",
    "yargs": "^15.3.1"
  },
  "dependencies": {
    "@chainlink/contracts": "^0.0.10",
    "@openzeppelin/contracts": "2.5.1",
    "@openzeppelin/contracts-ethereum-package": "2.5.0",
    "@openzeppelin/upgrades": "^2.8.0",
    "bignumber.js": "^9.0.0",
    "chai-as-promised": "^7.1.1",
    "elliptic": "^6.5.3",
    "ethers": "^5.0.26",
    "ganache-core": "^2.11.2",
    "hardhat-gas-reporter": "^1.0.4",
    "truffle-hdwallet-provider": "^1.0.17",
    "web3": "1.0.0-beta.55",
    "web3-provider-engine": "15.0.0",
    "web3-utils": "1.0.0-beta.55"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.sol": [
      "yarn solhint -f table",
      "prettier --write"
    ],
    "*.{js,ts}": [
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  }
}
